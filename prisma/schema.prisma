// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  role  String

  @@map("users")
}

model Profile {
  id               Int    @id @default(autoincrement())
  department       String
  institution      String
  backgroundMedium String
  address          String
  gender           String
  user_id          Int

  @@map("profiles")
}

model post {
  id           Int      @id @default(autoincrement())
  class        String
  Location     String
  subject      String
  days         String
  salary_range String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("posts")
}
